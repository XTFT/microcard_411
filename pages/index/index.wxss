/* *index.wxss* */
page{ background: #f2f2f2; }
.bg{ background: #fff;width: 100%;position: fixed;height: 100%; }
.container{ position: relative; }

.no_card{ text-align: center;margin-top: 156rpx; }
.no_card .t{ display: block;text-align: center;line-height: 70rpx;color: #37383b;font-family: '黑体'; }
.no_card .t .blue{ color: #0075a9 !important; }
.no_card .index_img{ width: 62%;display: inline-block;margin-top: 46rpx; }
.no_card .index_img image{ width: 100%;height: 360rpx; }
.no_card .creat{ width: 90%;background: #19ad17;border: none;color: white;font-family: '黑体';font-size: 16px;margin-top: 60rpx; }


.card_detail{ margin-top: 30rpx;overflow: hidden; }
.card_detail .cd_detail{ width: 690rpx;height: 400rpx;border-radius: 15rpx 15rpx 0 0;display: inline-block;background-size: 100% 100% !important;text-align: center; }
.card_detail .cd_detail .cd_share{ text-align: right;padding-right: 20rpx;padding-top: 5rpx;float: right;width: 120rpx; }
.card_detail .cd_detail .cd_share image{ width: 22rpx;height: 24rpx;margin-right: 8%;margin-bottom: -1rpx; }
.card_detail .cd_detail .cd_share text{ font-size: 13px;color: #fff;font-family: '微软雅黑'; }
.card_detail .cd_detail .cd_share button{ background: rgba(0, 0, 0, 0);width: 150rpx;height: 50rpx;line-height: 50rpx; }
.card_detail .cd_detail .cd_share button::after{ border: 0px solid rgba(0, 0, 0, 0); }
.card_detail .cd_detail .tx_name{ text-align: justify;margin-top: -4px;padding-top: 50rpx; }
.card_detail .cd_detail .tx_name .tx_img{ display: inline-block;width: 112rpx;height: 112rpx;border-radius: 50%;margin-left: 45rpx;border: 2px solid #fff;margin-right: 35rpx;margin-bottom: 35rpx; }
.card_detail .cd_detail .tx_name .n_detail{ display: inline-block;font-family: '微软雅黑';vertical-align: top;margin-top: 20rpx; }
.card_detail .cd_detail .tx_name .n_detail .b_name{ color: #fff;font-size: 18px;display: block; }
.card_detail .cd_detail .tx_name .n_detail .z_name{ color: #c2c2c2;font-size: 13px;display: block;margin-top: 5rpx; }
.cd_detail .o_detail{ height: 50%;background: rgba(0, 0, 0, 0.4);width: 100%;margin-top: -8rpx;border-top: 1px solid rgba(242, 246, 252, 0.2); }
.cd_detail .o_detail .od_item{ color: #b6b6b6;font-family: '微软雅黑';font-size: 24rpx;text-align: left;margin-top: 15rpx;margin-left: 36rpx; }
.cd_detail .o_detail .od_item:first-child{ margin-top: 10rpx !important; }
.cd_detail .o_detail .od_item image{ width: 24rpx;height: 24rpx;margin-bottom: -0.1%;margin-right: 10rpx; }
.cd_detail .o_detail .od_item text{ line-height: 24px; }

.card_detail .cd_number{ width: 690rpx;height: 184rpx;background: #fff;display: inline-block; }
.card_detail .cd_number .number_item{ text-align: center;font-family: '黑体';width: 180rpx;margin: 0 29.5rpx;display: inline-block; }
.card_detail .cd_number .number_item:first-child{ margin-left: 16rpx !important; }
.card_detail .cd_number .number_item:last-child{ margin-right: 16rpx !important; }
.card_detail .cd_number .number_item image{ margin-top: 59rpx; }
.card_detail .cd_number .number_item .zan_img{ width: 43rpx;height: 37rpx; }
.card_detail .cd_number .number_item .sc_img{ width: 44rpx;height: 40rpx; }
.card_detail .cd_number .number_item .ly_img{ width: 40rpx;height: 38rpx; }
.card_detail .cd_number .number_item .number_text{ color: #37383b;display: block;font-size: 30rpx; }

.rm_js{ width: 100%;background: #fff;font-family: '黑体';text-align: left;overflow: hidden; }
.rm_js .rm{ text-align: left;position: relative;display: inline-block;line-height: 87rpx;border-bottom: 1px solid #dcdcdc;width: 100%;font-size: 28rpx;padding-left: 48rpx;color: #37383b; }
.rm_js .rm .rm_detail{ position: absolute;top: 0;right: 38rpx; }
.rm_js .rm .rm_detail .rm_tx{ display: inline-block;margin-right: 5px;margin-top: 20rpx; }
.rm_js .rm .rm_detail .rm_tx image{ float: right;margin-left: -7%;margin-bottom: -7%;width: 44rpx;height: 44rpx;border: 2rpx solid #fff;border-radius: 50%;display: inline-block; }
.rm_js .rm .rm_detail .rm_numver{ display: inline-block;margin-right: 50rpx;float: right;line-height: 95rpx; }

.rm_js .js{}
.rm_js .js .js_title{font-size: 28rpx;margin-left: 48rpx;margin-top: 31rpx;display: inline-block;width: 100%;}
.rm_js .js .js_main{margin-top: 31rpx;text-indent: 2em;color: #707070;font-size: 24rpx;text-align:justify !important;display: inline-block;margin: 0 48rpx 20rpx;line-height: 48rpx;}

.be_pic{width: 100%;background: #f2f2f2;display: inline-block;height: 60rpx;line-height: 60rpx;text-align: center;color: #707070;font-size: 28rpx;margin-top: 10rpx;margin-bottom: 20rpx;}

.white{color: #fff;}

.show{display: block!important;}
.hide{ display: none !important; }
