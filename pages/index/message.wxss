/* pages/index/message.wxss */
.ly_list{width: 100%;padding: 8rpx 0;font-family: '微软雅黑';margin-bottom: 83rpx;}
.ly_list .ly_item{width: 100%;border-bottom: 1px solid #dcdcdc}
.ly_list .ly_item .touxiang{margin-right: 27rpx;width: 118rpx;height: 119rpx;border-radius: 50%;float: left;margin-top: 40rpx;margin-left: 51rpx;}
.ly_list .ly_item .ly_detail{padding-bottom: 35rpx;position: relative;float:left;width:72%;}
.ly_list .ly_item .ly_detail ._text{display: flex;margin-left: 27rpx;}
.ly_list .ly_item .ly_detail .ly_name{padding-top: 45rpx;font-size: 28rpx;color: #61bf61;}
.ly_list .ly_item .ly_detail .ly{font-size: 28rpx;color: #333;margin-top: 8rpx;}
.ly_list .ly_item .ly_detail .ly_time{margin-bottom: 23rpx;font-size: 20rpx;color: #bababa;margin-top: 10rpx;}


.ly_list .ly_item .ly_d{/*padding-left: 170rpx;*/margin-top: 4.5rpx;}
.ly_list .ly_item .ly_kuang{background: #f3f3f3;padding: 5rpx 0 20rpx 0;}
.ly_list .ly_item .ly_kuang .ly_msg{display: inline-block;font-size: 26rpx;margin-right: 20rpx;margin-left: 37rpx;width: 90%;}
.ly_list .ly_item .ly_kuang ._name{color: #61bf61;display: inline-block;font-size: 28rpx;margin: 0;}

.hf{right: 31rpx;top: 14.5rpx;border-radius: 6rpx;text-align: center;position: absolute;font-size: 20rpx;color: #fff;background: #bababa;display:inline-block;width: 100rpx;line-height: 40rpx;}

.srk{position: fixed;bottom: 0rpx;background: #f3f3f3;width: 100%;height: 90rpx;font-family: '微软雅黑'; z-index: 9999999;}
.srk_qb{animation: qbBlockTop 0.3s ease-in-out; -webkit-animation:qbBlockTop 0.3s ease-in-out;bottom:480rpx;}
@keyframes qbBlockTop
{
    from {bottom:10rpx}
    to {bottom:480rpx}
}
@-webkit-keyframes qbBlockTop
{
    from {bottom:0rpx}
    to {bottom:480rpx}
}

.srk .ly_content{background: #fff;padding:0 14rpx;overflow: hidden;border-radius: 5rpx;width: 484rpx;height: 61rpx;display: inline-block;margin-top: 13rpx;margin-left: 30rpx;border: 1px solid #bababa;}
.srk .ly_content input{background: #fff;font-size: 26rpx;display: block;width: 100%;height: 100%;}
.srk .bq{width: 48rpx;height: 48rpx;display: inline-block;vertical-align: top;padding: 20rpx 23rpx}
.srk .bq image{width: 100%;height: 100%;}
.srk .send{border-radius: 5rpx;display: inline-block;vertical-align: top;margin-top: 13rpx;width: 91rpx;height: 60rpx;border: 1px solid #bababa;font-size: 26rpx;text-align: center;line-height: 60rpx;color: #bababa;}
.srk .send.active{background:#19ad17;color: #fff;border: 1px solid #19ad17; }
.mp_no{-webkit-transform-style:preserve-3d;transform-style:preserve-3d;-webkit-backface-visibility:hidden;backface-visibility:hidden;position:fixed;top:0;right:0;bottom:0;left:0;z-index:100;width:100%;height:100%;display:-webkit-box;display:-ms-flexbox;-webkit-box-orient:vertical;-webkit-box-pack:center;-webkit-box-align:center;-ms-flex-direction:column;-ms-flex-pack:center;-ms-flex-align:center;background: #f2f2f2;}
.mp_no1{-webkit-transform-style:preserve-3d;transform-style:preserve-3d;-webkit-backface-visibility:hidden;backface-visibility:hidden}
.mp_no_info{position:relative;z-index:100;width:100%;color:#666;text-align:center;}
.no_icon{width: 290rpx;height: 300rpx;display: inline-block;margin-top: 310rpx;}

.show{display: block!important;}
.hide{display: none!important;}

.mesg_con{word-wrap: break-word;word-break:break-all}

.gb{position: absolute;top: 12rpx;animation:heart 1s ease infinite;display: inline-block;width: 1rpx;background: #333;height: 41rpx;margin-bottom: 3rpx;}
@keyframes heart {
    0% {opacity: 1;}
    100%{opacity: 0;}    
 }

