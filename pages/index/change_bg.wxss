/* pages/index/change_bg.wxss */
page{font-family: '微软雅黑';}
.top{margin-left: 50rpx;text-align: left;margin-top: 20rpx;}
.top .top_title{font-size: 28rpx;color: #37383b;margin-left: 3rpx;}
.top .upload_img{width: 328rpx;height: 240rpx;border-radius: 8rpx;margin-top: 15rpx;margin-bottom: 45rpx;}

.middle{width: 100%;height: 26rpx;background: #e5e5e5;}

.bg_options{width: 100%;text-align: left;}
.bg_options .bo_title{font-size: 28rpx;color: #37383b;margin-left: 33rpx;display: flex;margin-top: 36rpx;margin-bottom: 22rpx;}
.bg_options .bg_item{display: inline-block;margin: 0 19.5rpx 10rpx 29rpx;width: 328rpx;height: 190rpx;overflow: hidden;border-radius: 10rpx;position: relative;}
.bg_options .bg_item:nth-child(2n+1){margin: 0 29rpx 10rpx 19.5rpx;}
.bg_options .bg_item .image{width: 100%;height: 100%;}
.bg_options .bg_item .cloas_bg{position: absolute;right: 10rpx;top: 5rpx;width: 50rpx;height: 50rpx;}









